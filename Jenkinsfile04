pipeline {
    agent any

    parameters {
        choice(
            name: 'SELECTION_TYPE',
            choices: ['By Role', 'By Device'],
            description: 'Select how to choose targets: by Role(s) or by specific Device(s)'
        )

        // Multi-select roles (requires Extended Choice Parameter Plugin)
        extendedChoice(
            name: 'DEVICE_ROLES',
            type: 'PT_MULTI_SELECT',
            description: 'Select one or more device roles (if SELECTION_TYPE=By Role)',
            multiSelectDelimiter: ',',
            value: 'Access Switch,Distribution,Core,Firewall,Server,Router'
        )

        // Multi-select devices (requires Extended Choice Parameter Plugin)
        extendedChoice(
            name: 'DEVICES',
            type: 'PT_MULTI_SELECT',
            description: 'Select one or more specific devices (if SELECTION_TYPE=By Device)',
            multiSelectDelimiter: ',',
            value: 'Test-Env-DS_sw01,Test-Env-DS_sw02,test-env-access_sw01,test-env-access_sw02,Home-Lab-Core-sw01,Home-Lab-Access-sw01'
        )
    }

    environment {
        NETBOX_API   = 'http://172.18.0.6:8080'
        NETBOX_TOKEN = credentials('netbox-token')
        GITHUB_TOKEN = credentials('github-cred-token')
    }

    stages {

        stage('Checkout') {
            steps {
                git branch: 'main',
                    url: 'https://github.com/baltah666/netbox-automation-v02.git',
                    credentialsId: 'github-cred'
            }
        }

        stage('Setup Environment') {
            steps {
                sh '''
                    python3 -m venv venv
                    . venv/bin/activate
                    pip install --upgrade pip
                    pip install "ansible-core>=2.15,<2.17" ansible==8.5.0
                    pip install -r requirements.txt
                    ansible-galaxy collection install netbox.netbox || true
                '''
            }
        }

        stage('Validate NetBox Connection') {
            steps {
                withEnv(["NETBOX_API=" + env.NETBOX_API, "NETBOX_TOKEN=" + env.NETBOX_TOKEN]) {
                    sh '''
                        . venv/bin/activate
                        echo "ðŸ”— Testing NetBox API connectivity..."
                        STATUS_CODE=$(curl -s -H "Authorization: Token ${NETBOX_TOKEN}" \
                            -o /dev/null -w "%{http_code}" "${NETBOX_API}/api/status/")
                        if [ "$STATUS_CODE" = "200" ]; then
                            echo "âœ… NetBox API authentication successful!"
                        else
                            echo "âŒ Unable to authenticate with NetBox API (HTTP $STATUS_CODE)"
                            exit 1
                        fi
                    '''
                }
            }
        }

        stage('Get Devices List') {
            steps {
                withEnv(["NETBOX_API=" + env.NETBOX_API, "NETBOX_TOKEN=" + env.NETBOX_TOKEN]) {
                    script {
                        if (params.SELECTION_TYPE == 'By Role') {
                            def roles = params.DEVICE_ROLES.tokenize(',')
                            echo "ðŸŽ¯ Selected Roles: ${roles}"
                            def devicesJSON = sh(
                                script: """
                                    . venv/bin/activate
                                    python3 get_devices.py --roles "${params.DEVICE_ROLES}" --quiet
                                """,
                                returnStdout: true
                            ).trim()
                            env.DEVICE_LIST = devicesJSON
                            echo "âœ… Devices fetched from NetBox by role: ${devicesJSON}"

                        } else if (params.SELECTION_TYPE == 'By Device') {
                            def devices = params.DEVICES.tokenize(',')
                            def devicesJSON = groovy.json.JsonOutput.toJson(devices)
                            env.DEVICE_LIST = devicesJSON
                            echo "âœ… Devices selected manually: ${devicesJSON}"
                        }
                    }
                }
            }
        }

        stage('Parallel Config Generation') {
            when {
                expression { return env.DEVICE_LIST?.trim() }
            }
            steps {
                script {
                    def devices = readJSON text: env.DEVICE_LIST
                    def branches = [:]

                    for (dev in devices) {
                        def deviceName = dev
                        branches[deviceName] = {
                            stage("${deviceName}") {
                                withEnv([
                                    "NETBOX_API=" + env.NETBOX_API,
                                    "NETBOX_TOKEN=" + env.NETBOX_TOKEN,
                                    "ANSIBLE_NETBOX_URL=" + env.NETBOX_API,
                                    "ANSIBLE_NETBOX_TOKEN=" + env.NETBOX_TOKEN
                                ]) {
                                    sh """
                                        . venv/bin/activate
                                        echo "ðŸš€ Generating configuration for device: ${deviceName}"
                                        ansible-playbook -i netbox_inv.yml generate_config.yml \
                                            --limit ${deviceName} --tags device,interfaces,ip_addresses,site,vlans,generate_config
                                    """
                                }
                            }
                        }
                    }
                    parallel branches
                }
            }
        }

        stage('Git Push Changes') {
            steps {
                withEnv(["GITHUB_TOKEN=" + env.GITHUB_TOKEN]) {
                    sh '''
                        git config user.name "Abdulilah Baltah"
                        git config user.email "baltah666@gmail.com"

                        if [ -n "$(git status --porcelain)" ]; then
                            git add .
                            git commit -m "Automated update for devices from Jenkins build ${BUILD_NUMBER}"
                            git push https://${GITHUB_TOKEN}@github.com/baltah666/netbox-automation-v02.git main
                        else
                            echo "No changes to commit."
                        fi
                    '''
                }
            }
        }
    }

    post {
        always {
            echo "Pipeline finished."
        }
        failure {
            echo "âŒ Pipeline failed â€” check logs."
        }
        success {
            echo "âœ… All device configurations generated successfully!"
        }
    }
}
