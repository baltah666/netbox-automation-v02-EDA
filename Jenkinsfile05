/************************************************************************************
 * üìò Jenkinsfile05 ‚Äî Optimized and Cached Version
 * ----------------------------------------------------------------------------------
 * üîÑ Upgrade Summary (from Jenkinsfile04 ‚Üí Jenkinsfile05)
 * 
 * 1Ô∏è‚É£ **Performance Optimization ‚Äî Cached Python Virtual Environment**
 *     ‚Ä¢ The Setup Environment stage now detects if a virtualenv (`venv/`) already exists.
 *     ‚Ä¢ If found, it reuses the existing environment instead of rebuilding it each time.
 *     ‚Ä¢ This reduces the setup stage time from ~1 minute to under 1 second.
 * 
 * 2Ô∏è‚É£ **Smart Validation**
 *     ‚Ä¢ Automatically checks if Ansible is installed inside the virtualenv.
 *     ‚Ä¢ Displays the current Ansible version for traceability.
 *     ‚Ä¢ If the environment is missing or corrupted, it rebuilds automatically.
 * 
 * 3Ô∏è‚É£ **Durability and Stability**
 *     ‚Ä¢ Uses Jenkins `durabilityHint('PERFORMANCE_OPTIMIZED')` for faster pipeline execution.
 *     ‚Ä¢ All environment paths (like the venv) are workspace-local for isolation.
 * 
 * 4Ô∏è‚É£ **Same Functional Behavior as v4**
 *     ‚Ä¢ All stages (Checkout, NetBox Validation, Device Fetching, Parallel Config Generation, Git Push)
 *       remain fully compatible and work the same way.
 *     ‚Ä¢ Role-based and device-based selections continue to function identically.
 * 
 * 5Ô∏è‚É£ **Ready for Future Enhancements**
 *     ‚Ä¢ Can easily extend to auto-refresh the virtualenv when `requirements.txt` or 
 *       Ansible version changes (planned v6 feature).
 * 
 * ----------------------------------------------------------------------------------
 * ‚öôÔ∏è Key Benefits
 *  ‚Ä¢ 95% faster setup stage (from ~65s ‚Üí <1s)
 *  ‚Ä¢ No repeated dependency downloads
 *  ‚Ä¢ Stable and deterministic builds
 *  ‚Ä¢ Fully backward compatible with Jenkinsfile04
 * ----------------------------------------------------------------------------------
 * Author: Abdulilah Baltah
 * Version: Jenkinsfile05
 * Date: November 2025
 ************************************************************************************/

pipeline {
    agent any

    parameters {
        choice(
            name: 'SELECTION_TYPE',
            choices: ['By Role', 'By Device'],
            description: 'Select how to choose targets: by Role(s) or by specific Device(s)'
        )

        extendedChoice(
            name: 'DEVICE_ROLES',
            type: 'PT_MULTI_SELECT',
            description: 'Select one or more device roles (if SELECTION_TYPE=By Role)',
            multiSelectDelimiter: ',',
            value: 'Access Switch,Distribution,Core,Firewall,Server,Router'
        )

        extendedChoice(
            name: 'DEVICES',
            type: 'PT_MULTI_SELECT',
            description: 'Select one or more specific devices (if SELECTION_TYPE=By Device)',
            multiSelectDelimiter: ',',
            value: 'Test-Env-DS_sw01,Test-Env-DS_sw02,test-env-access_sw01,test-env-access_sw02,Home-Lab-Core-sw01,Home-Lab-Access-sw01'
        )
    }

    environment {
        NETBOX_API   = 'http://172.18.0.6:8080'
        NETBOX_TOKEN = credentials('netbox-token')
        GITHUB_TOKEN = credentials('github-cred-token')
        VENV_DIR     = "${env.WORKSPACE}/venv"
    }

    options {
        durabilityHint('PERFORMANCE_OPTIMIZED')
    }

    stages {

        stage('Checkout') {
            steps {
                git branch: 'main',
                    url: 'https://github.com/baltah666/netbox-automation-v02.git',
                    credentialsId: 'github-cred'
            }
        }

        stage('Setup Environment') {
            steps {
                sh '''
                    if [ -d "${VENV_DIR}/bin" ] && [ -f "${VENV_DIR}/bin/ansible-playbook" ]; then
                        echo "‚úÖ Using cached virtualenv at ${VENV_DIR}"
                        . "${VENV_DIR}/bin/activate"
                        INSTALLED_VER=$(ansible --version | head -1 | awk '{print $2}')
                        echo "üîç Installed Ansible version: $INSTALLED_VER"
                    else
                        echo "‚öôÔ∏è Creating virtualenv at ${VENV_DIR}..."
                        python3 -m venv "${VENV_DIR}"
                        . "${VENV_DIR}/bin/activate"
                        pip install --upgrade pip
                        pip install "ansible-core>=2.15,<2.17" ansible==8.5.0
                        pip install -r requirements.txt
                        ansible-galaxy collection install netbox.netbox || true
                    fi
                '''
            }
        }

        stage('Validate NetBox Connection') {
            steps {
                withEnv(["NETBOX_API=" + env.NETBOX_API, "NETBOX_TOKEN=" + env.NETBOX_TOKEN]) {
                    sh '''
                        . "${VENV_DIR}/bin/activate"
                        echo "üîó Testing NetBox API connectivity..."
                        STATUS_CODE=$(curl -s -H "Authorization: Token ${NETBOX_TOKEN}" \
                            -o /dev/null -w "%{http_code}" "${NETBOX_API}/api/status/")
                        if [ "$STATUS_CODE" = "200" ]; then
                            echo "‚úÖ NetBox API authentication successful!"
                        else
                            echo "‚ùå Unable to authenticate with NetBox API (HTTP $STATUS_CODE)"
                            exit 1
                        fi
                    '''
                }
            }
        }

        stage('Get Devices List') {
            steps {
                withEnv(["NETBOX_API=" + env.NETBOX_API, "NETBOX_TOKEN=" + env.NETBOX_TOKEN]) {
                    script {
                        if (params.SELECTION_TYPE == 'By Role') {
                            def roles = params.DEVICE_ROLES.tokenize(',')
                            echo "üéØ Selected Roles: ${roles}"
                            def devicesJSON = sh(
                                script: """
                                    . "${VENV_DIR}/bin/activate"
                                    python3 get_devices.py --roles "${params.DEVICE_ROLES}" --quiet
                                """,
                                returnStdout: true
                            ).trim()
                            env.DEVICE_LIST = devicesJSON
                            echo "‚úÖ Devices fetched from NetBox by role: ${devicesJSON}"

                        } else if (params.SELECTION_TYPE == 'By Device') {
                            def devices = params.DEVICES.tokenize(',')
                            def devicesJSON = groovy.json.JsonOutput.toJson(devices)
                            env.DEVICE_LIST = devicesJSON
                            echo "‚úÖ Devices selected manually: ${devicesJSON}"
                        }
                    }
                }
            }
        }

        stage('Parallel Config Generation') {
            when {
                expression { return env.DEVICE_LIST?.trim() }
            }
            steps {
                script {
                    def devices = readJSON text: env.DEVICE_LIST
                    def branches = [:]

                    for (dev in devices) {
                        def deviceName = dev
                        branches[deviceName] = {
                            stage("${deviceName}") {
                                withEnv([
                                    "NETBOX_API=" + env.NETBOX_API,
                                    "NETBOX_TOKEN=" + env.NETBOX_TOKEN,
                                    "ANSIBLE_NETBOX_URL=" + env.NETBOX_API,
                                    "ANSIBLE_NETBOX_TOKEN=" + env.NETBOX_TOKEN
                                ]) {
                                    sh """
                                        . "${VENV_DIR}/bin/activate"
                                        echo "üöÄ Generating configuration for device: ${deviceName}"
                                        ansible-playbook -i netbox_inv.yml generate_config.yml \
                                            --limit ${deviceName} --tags device,interfaces,ip_addresses,site,vlans,generate_config
                                    """
                                }
                            }
                        }
                    }
                    parallel branches
                }
            }
        }

        stage('Git Push Changes') {
            steps {
                withEnv(["GITHUB_TOKEN=" + env.GITHUB_TOKEN]) {
                    sh '''
                        git config user.name "Abdulilah Baltah"
                        git config user.email "baltah666@gmail.com"

                        if [ -n "$(git status --porcelain)" ]; then
                            git add .
                            git commit -m "Automated update for devices from Jenkins build ${BUILD_NUMBER}"
                            git push https://${GITHUB_TOKEN}@github.com/baltah666/netbox-automation-v02.git main
                        else
                            echo "No changes to commit."
                        fi
                    '''
                }
            }
        }
    }

    post {
        always {
            echo "Pipeline finished."
        }
        failure {
            echo "‚ùå Pipeline failed ‚Äî check logs."
        }
        success {
            echo "‚úÖ All device configurations generated successfully!"
        }
    }
}
