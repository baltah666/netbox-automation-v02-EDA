pipeline {
    agent any

    parameters {
        string(
            name: 'DEVICE_ROLE',
            defaultValue: 'Access Switch',
            description: 'NetBox device role to target (e.g. Access Switch, Distribution, Core, Firewall, etc.)'
        )
    }

    environment {
        NETBOX_API   = 'http://netbox-docker-netbox-1:8080'   // no /api at the end!
        NETBOX_TOKEN = credentials('netbox-token')
        GITHUB_TOKEN = credentials('github-cred-token')        // GitHub Personal Access Token
    }

    stages {

        stage('Checkout') {
            steps {
                git branch: 'main',
                    url: 'https://github.com/baltah666/netbox-automation-v02.git',
                    credentialsId: 'github-cred'
            }
        }

        stage('Setup Environment') {
            steps {
                sh '''
                    python3 -m venv venv
                    . venv/bin/activate
                    pip install --upgrade pip
                    pip install -r requirements.txt
                    ansible-galaxy collection install netbox.netbox || true
                '''
            }
        }

        // üß™ Debug-enabled validation of NetBox API connectivity
        stage('Validate NetBox Connection') {
            steps {
                sh """
                    . venv/bin/activate
                    echo "üîó Testing NetBox API connectivity..."
                    echo "üîë Token variable length: \${#NETBOX_TOKEN}"
                    echo "üåç NetBox API endpoint: \${NETBOX_API}"

                    echo "üß™ Running curl verbose test..."
                    curl -v -H "Authorization: Token \${NETBOX_TOKEN}" "\${NETBOX_API}/api/status/" || true

                    STATUS_CODE=\$(curl -s -H "Authorization: Token \${NETBOX_TOKEN}" \
                        -o /dev/null -w "%{http_code}" "\${NETBOX_API}/api/status/" || true)

                    echo "NetBox API HTTP status: \$STATUS_CODE"
                    if [ "\$STATUS_CODE" != "200" ]; then
                        echo "‚ùå Unable to authenticate with NetBox API (\$NETBOX_API)"
                        exit 1
                    else
                        echo "‚úÖ NetBox API authentication successful!"
                    fi
                """
            }
        }

        stage('Get Devices List') {
            steps {
                script {
                    echo "üîç Fetching device list from NetBox for role: ${params.DEVICE_ROLE}"
                    def devicesJSON = sh(
                        script: """
                            . venv/bin/activate
                            export NETBOX_API="$NETBOX_API"
                            export NETBOX_TOKEN="$NETBOX_TOKEN"

                            echo "NETBOX_API=$NETBOX_API" 1>&2
                            echo "NETBOX_TOKEN length: \${#NETBOX_TOKEN}" 1>&2
                            echo "Role: ${params.DEVICE_ROLE}" 1>&2

                            python3 get_devices.py --role "${params.DEVICE_ROLE}" --quiet
                        """,
                        returnStdout: true
                    ).trim()

                    def devices = readJSON text: devicesJSON
                    echo "‚úÖ Devices fetched: ${devices}"

                    env.DEVICE_LIST = devicesJSON
                }
            }
        }

        stage('Parallel Config Generation') {
            when {
                expression { return env.DEVICE_LIST?.trim() }
            }
            steps {
                script {
                    def devices = readJSON text: env.DEVICE_LIST
                    def branches = [:]

                    for (dev in devices) {
                        def deviceName = dev
                        branches[deviceName] = {
                            stage("${deviceName}") {
                                parallel(
                                    "1. device.json": {
                                        sh """
                                            . venv/bin/activate
                                            export NETBOX_API="$NETBOX_API"
                                            export NETBOX_TOKEN="$NETBOX_TOKEN"
                                            export ANSIBLE_NETBOX_URL="${NETBOX_API}"
                                            export ANSIBLE_NETBOX_TOKEN="${NETBOX_TOKEN}"
                                            ansible-playbook -i netbox_inv.yml generate_config.yml --limit ${deviceName} --tags device
                                        """
                                    },
                                    "2. interfaces.json": {
                                        sh """
                                            . venv/bin/activate
                                            export NETBOX_API="$NETBOX_API"
                                            export NETBOX_TOKEN="$NETBOX_TOKEN"
                                            export ANSIBLE_NETBOX_URL="${NETBOX_API}"
                                            export ANSIBLE_NETBOX_TOKEN="${NETBOX_TOKEN}"
                                            ansible-playbook -i netbox_inv.yml generate_config.yml --limit ${deviceName} --tags interfaces
                                        """
                                    },
                                    "3. ip_addresses.json": {
                                        sh """
                                            . venv/bin/activate
                                            export NETBOX_API="$NETBOX_API"
                                            export NETBOX_TOKEN="$NETBOX_TOKEN"
                                            export ANSIBLE_NETBOX_URL="${NETBOX_API}"
                                            export ANSIBLE_NETBOX_TOKEN="${NETBOX_TOKEN}"
                                            ansible-playbook -i netbox_inv.yml generate_config.yml --limit ${deviceName} --tags ip_addresses
                                        """
                                    },
                                    "4. site.json": {
                                        sh """
                                            . venv/bin/activate
                                            export NETBOX_API="$NETBOX_API"
                                            export NETBOX_TOKEN="$NETBOX_TOKEN"
                                            export ANSIBLE_NETBOX_URL="${NETBOX_API}"
                                            export ANSIBLE_NETBOX_TOKEN="${NETBOX_TOKEN}"
                                            ansible-playbook -i netbox_inv.yml generate_config.yml --limit ${deviceName} --tags site
                                        """
                                    },
                                    "5. vlans.json": {
                                        sh """
                                            . venv/bin/activate
                                            export NETBOX_API="$NETBOX_API"
                                            export NETBOX_TOKEN="$NETBOX_TOKEN"
                                            export ANSIBLE_NETBOX_URL="${NETBOX_API}"
                                            export ANSIBLE_NETBOX_TOKEN="${NETBOX_TOKEN}"
                                            ansible-playbook -i netbox_inv.yml generate_config.yml --limit ${deviceName} --tags vlans
                                        """
                                    },
                                    "6. generate_config": {
                                        sh """
                                            . venv/bin/activate
                                            export NETBOX_API="$NETBOX_API"
                                            export NETBOX_TOKEN="$NETBOX_TOKEN"
                                            export ANSIBLE_NETBOX_URL="${NETBOX_API}"
                                            export ANSIBLE_NETBOX_TOKEN="${NETBOX_TOKEN}"
                                            ansible-playbook -i netbox_inv.yml generate_config.yml --limit ${deviceName} --tags generate_config
                                        """
                                    }
                                )
                            }
                        }
                    }

                    parallel branches
                }
            }
        }

        stage('Git Push Changes') {
            steps {
                sh '''
                    git config user.name "Abdulilah Baltah"
                    git config user.email "baltah666@gmail.com"

                    if [ -n "$(git status --porcelain)" ]; then
                        git add .
                        git commit -m "Automated update for ${DEVICE_ROLE} devices from Jenkins build ${BUILD_NUMBER}"
                        git push https://${GITHUB_TOKEN}@github.com/baltah666/netbox-automation-v02.git main
                    else
                        echo "No changes to commit."
                    fi
                '''
            }
        }
    }

    post {
        always {
            echo "Pipeline finished."
        }
        failure {
            echo "‚ùå Pipeline failed ‚Äî check logs."
        }
        success {
            echo "‚úÖ All device configurations generated successfully!"
        }
    }
}
